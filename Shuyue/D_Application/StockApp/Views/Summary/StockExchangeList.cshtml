
@{
    ViewBag.Title = "交易记录";
}

@model List<ManageEF.stock_exchange_record>
<div class="page__bd">
    <div class="weui-cells__title">带说明的列表项</div>
    <div class="weui-cells">
        @foreach (var item in Model.OrderByDescending(a => a.SellDate))
        {
            <div class="weui-cell">
                <div class="weui-cell__bd">
                    <p>@item.StockName<label style="font-size:12px;">@item.StockCode</label></p>
                </div>
                <div class="weui-cell__ft"><span style="color:@(item.Profit > 0 ? "red" : item.Profit == 0 ? "gray" : "green";)">@item.Profit</span></div>
            </div>
        }
    </div>

</div>