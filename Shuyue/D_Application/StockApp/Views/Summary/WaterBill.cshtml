@{
    ViewBag.Title = "账单流水";
}
@model List<ManageEF.water_bill>

<div class="page__bd">
    <div class="weui-cells__title">账单流水</div>
    <div class="weui-cells">
        @foreach (var item in Model.OrderByDescending(a => a.Date))
        {
            <div class="weui-cell">
                <div class="weui-cell__bd">
                    <b>@item.Date.ToString("yyyy-MM")</b>
                </div>
            </div>
            <div style="margin-left:15px;font-size:12px;">
                <div class="weui-cell__bd">
                    <p>月初净资产 @item.BMonthMoney</p>
                    <p>转入 @item.TurnInMoney 转出 @item.TurnOutMoney</p>
                    <p>盈亏 @item.ProfitMoney</p>
                    <p>月末净资产 @item.EMonthMoney</p>
                </div>
            </div>
        }
    </div>
</div>